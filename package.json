{
  "name": "node-libpng",
  "version": "0.0.1",
  "description": "Unofficial bindings for node to libpng.",
  "main": "dist/index.js",
  "author": "Frederick Gnodtke",
  "license": "MIT",
  "gypfile": true,
  "scripts": {
    "postinstall": "node scripts/rename.js",
    "build": "tsc -p tsconfig-production.json --sourceMap",
    "test": "jest",
    "lint": "tslint --format stylish --project tsconfig.json",
    "clean": "rm -rf dist build",
    "docs": "typedoc --mode file --out docs/ --exclude '**/test-*.ts' src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Prior99/node-libpng"
  },
  "files": [
    "dist",
    "index.d.ts",
    "src",
    "LICENSE",
    "README.md",
    "example"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "lines": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|js)"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "mapCoverage": true
  },
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "@types/jest": "^21.1.7",
    "@types/node": "^9.4.7",
    "bind-decorator": "^1.0.11",
    "coveralls": "^3.0.0",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.3",
    "tslint": "^5.8.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "nan": "^2.9.2"
  }
}
